  "type": "module",
  "exports": "./index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "hex": "NODE_OPTIONS='--import=./register.js' TS_NODE_PROJECT=\"src/server/tsconfig.json\" ts-node src/server/commands",
    "analyse-size": "DATE=$(date '+%Y%m%d-%H%M%S'); NODE_OPTIONS='--import=./register.js' NODE_ENV=production TS_NODE_PROJECT=\"src/client/tsconfig.json\" webpack --mode production --profile --json | grep -E '^{' | sed -E 's/Done in .+//' > size-stats-$DATE.json && webpack-bundle-analyzer size-stats-$DATE.json dist/statics/",
    "lint": "eslint && vue-tsc -p src/client --noEmit",
    "start": "node index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "build-client": "NODE_OPTIONS='--import=./register.js' NODE_ENV=production TS_NODE_PROJECT=\"src/client/tsconfig.json\" webpack --mode production",
    "build-server": "tsc -b src/server",
    "dev-client": "NODE_OPTIONS='--import=./register.js' TS_NODE_PROJECT=\"src/client/tsconfig.json\" webpack serve",
    "dev-server": "tsc-watch --noClear -b ./src/server/tsconfig.json --onSuccess \"node --enable-source-maps --trace-warnings index.js\"",
    "dev-server-debug": "tsc-watch --noClear -b ./src/server/tsconfig.json --onSuccess \"node --inspect --enable-source-maps index.js\"",
    "serve": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn dev-server\" \"yarn dev-client\"",
    "serve:prod": "yarn build && yarn start:prod",
    "build": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn build-server\" \"yarn build-client\"",
    "db:diff": "yarn build-server && typeorm schema:log -d dist/server/data-source.js",
    "db:sync": "yarn build-server && typeorm schema:sync -d dist/server/data-source.js",
    "test:unit": "NODE_OPTIONS='--import=./register.js' TS_NODE_PROJECT=\"src/shared/tsconfig.json\" mocha src/**/**/test/**/*.ts --extension ts",
    "test:e2e": "yarn hex check-tests-requirements && cypress run",
    "test:all": "yarn test:unit && yarn test:e2e",
    "test": "yarn test:unit"
  },
