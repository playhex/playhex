{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2019",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "outDir": "../../dist/shared",
        "baseUrl": "./",
        "lib": [
            "ES2019",
            "dom"
        ],
        "composite": true
    },
    "include": [
        "**/*.ts"
    ]
}
