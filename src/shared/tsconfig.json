{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2019",
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "outDir": "../../dist/shared",
        "baseUrl": "./",
        "lib": [
            "ES2019"
        ],
        "composite": true
    },
    "paths": {
        "@shared/*": [
            "../shared/*"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}
