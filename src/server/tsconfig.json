{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2019",
        "sourceMap": true,
        "declaration": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "noErrorTruncation": true,
        "outDir": "../../dist/server",
        "lib": [
            "dom",
            "ES2019"
        ],
        "types": [
            "node"
        ],
        "incremental": true,
        "composite": true,
        "baseUrl": "./"
    },
    "include": [
        "**/*.ts",
    ],
    "references": [
        {
            "path": "../shared"
        }
    ]
}
